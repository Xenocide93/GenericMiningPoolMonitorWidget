<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	tools:context="com.ongxeno.bitcoinratewidget.MainActivity">

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="16dp"
		android:text="Copy Token to Clipboard and press button below."/>

	<Button
		android:id="@+id/pasteSuprnovaTokenButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="32dp"
		android:text="Set Suprnova API Key"
		/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#999"/>

	<Button
		android:id="@+id/pasteCoinmineTokenButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:text="Set Coinmine API Key"
		/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#999"/>

	<Button
		android:id="@+id/pasteDwarfWalletAddressButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:text="Set Dwarfpool Wallet Address"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp">

		<EditText
			android:id="@+id/pasteDwarfEmailEditText"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:layout_height="wrap_content"
			android:hint="Dwarfpool Email"
			/>

		<Button
			android:id="@+id/saveDwarfEmailButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#999"/>

</LinearLayout>
